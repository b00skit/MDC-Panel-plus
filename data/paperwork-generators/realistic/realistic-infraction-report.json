{
    "id": "realistic-infraction-report",
    "title": "Infraction Citation",
    "description": "A realistic, non-traffic related infraction citation.",
    "icon": "FileWarning",
    "icon_color": "#f59e0b",
    "is_html_output": true,
    "custom_button_text": "Open MDC Record",
    "custom_button_link": "https://mdc.gta.world/record/{{defendant_name}}",
    "custom_button_replace_spaces": true,
    "output": "<table style=\"width:100%;font-family:'Times New Roman',serif;border-collapse:collapse;border:2px solid #111;background-color:white;color:#111;\">\n  <tbody>\n    <tr>\n      <td colspan=\"4\" style=\"text-align:center;padding:10px;border-bottom:2px solid #111;\">\n        <h1 style=\"font-family:Arial,sans-serif;font-size:1.6rem;font-weight:700;margin:0;text-transform:uppercase;\">County of Los Santos</h1>\n        <h2 style=\"font-family:Arial,sans-serif;font-size:1.05rem;font-weight:600;margin:2px 0 0;\">Notice of Infraction Citation</h2>\n      </td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;\"><strong>Citation #:</strong> {{citation_number}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;\"><strong>Agency Case #:</strong> {{case_number}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;\"><strong>Date:</strong> {{general.date}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;font-weight:bold;text-align:right;background-color:#f3f4f6;\">PAY ON OR BEFORE: {{addDays general.date 28}}</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;\"><strong>Time:</strong> {{general.time}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;\" colspan=\"2\"><strong>Issuing Agency:</strong> {{officers.0.department}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #ccc;\"><strong>Service Method:</strong> {{citation_service_method}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"background-color:#e5e7eb;padding:6px;border-top:2px solid #111;border-bottom:1px solid #bbb;text-align:center;font-weight:bold;\">Officer Information</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Officer:</strong> {{officers.0.name}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Badge #:</strong> {{officers.0.badgeNumber}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Division / Unit:</strong> {{officers.0.divDetail}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Watch / Shift:</strong> {{officer_watch}}</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Officer Contact:</strong> {{officer_contact}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Officer Signature:</strong> {{officer_signature}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Supervisor:</strong> {{supervisor_name}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Incident Type:</strong> {{incident_type}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"background-color:#e5e7eb;padding:6px;border-top:2px solid #111;border-bottom:1px solid #bbb;text-align:center;font-weight:bold;\">Defendant Information</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Name:</strong> {{defendant_name}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Address:</strong> {{defendant_address}}, {{defendant_city_state_zip}}</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Date of Birth:</strong> {{defendant_dob}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Age:</strong> {{defendant_age}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Gender:</strong> {{defendant_gender}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Race:</strong> {{defendant_race}}</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Phone:</strong> {{defendant_phone}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Email:</strong> {{defendant_email}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Preferred Contact:</strong> {{contact_preference}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Identification:</strong> {{defendant_id_type}} {{defendant_id_number}}</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Employer:</strong> {{defendant_employer}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Occupation:</strong> {{defendant_occupation}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Signature (if obtained):</strong> {{defendant_signature}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Custody Release:</strong> {{#if custody_release}}Released{{else}}N/A{{/if}}</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Release Conditions:</strong> {{release_conditions}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Victim / Complainant:</strong> {{victim_name}} {{victim_contact}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"background-color:#e5e7eb;padding:6px;border-top:2px solid #111;border-bottom:1px solid #bbb;text-align:center;font-weight:bold;\">Violation &amp; Location Details</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Location of Violation:</strong> {{location.street}}, {{location.district}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Property Seized:</strong> {{#if property_seized}}Yes{{else}}No{{/if}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\"><strong>Property Receipt #:</strong> {{property_receipt_number}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"padding:0;border:1px solid #bbb;border-left:none;border-right:none;\">\n        <table style=\"width:100%;border-collapse:collapse;\">\n          <tbody>\n            <tr style=\"background-color:#f3f4f6;\">\n              <td style=\"padding:6px;font-weight:bold;border-bottom:1px solid #ccc;\">Offense #</td>\n              <td style=\"padding:6px;font-weight:bold;border-bottom:1px solid #ccc;\" colspan=\"2\">Description</td>\n              <td style=\"padding:6px;font-weight:bold;border-bottom:1px solid #ccc;text-align:right;\">Fine</td>\n            </tr>\n            {{#each charges}}\n            <tr>\n              <td style=\"padding:6px;border-bottom:1px solid #eee;\">{{@index_1}}</td>\n              <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\">{{#with (lookup @root.penalCode chargeId)}}{{charge}}{{/with}}</td>\n              <td style=\"padding:6px;border-bottom:1px solid #eee;text-align:right;\">${{fine}}</td>\n            </tr>\n            {{/each}}\n            <tr>\n              <td style=\"padding:6px;text-align:right;font-weight:bold;border-top:1px solid #111;\" colspan=\"3\">Total Fine:</td>\n              <td style=\"padding:6px;text-align:right;font-weight:bold;border-top:1px solid #111;\">${{charges_total_fine}}</td>\n            </tr>\n          </tbody>\n        </table>\n      </td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"padding:10px;white-space:pre-wrap;border-bottom:1px solid #ccc;\"><strong>Narrative of Events:</strong>\n{{narrative}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"2\" style=\"padding:10px;white-space:pre-wrap;border-bottom:1px solid #ccc;\"><strong>Officer Observations:</strong>\n{{officer_observations}}</td>\n      <td colspan=\"2\" style=\"padding:10px;white-space:pre-wrap;border-bottom:1px solid #ccc;\"><strong>Witness Statements:</strong>\n{{witness_statements}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"2\" style=\"padding:10px;white-space:pre-wrap;border-bottom:1px solid #ccc;\"><strong>Evidence Collected:</strong>\n{{evidence_collected}}</td>\n      <td colspan=\"2\" style=\"padding:10px;white-space:pre-wrap;border-bottom:1px solid #ccc;\"><strong>Victim Impact / Notes:</strong>\n{{victim_impact}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"background-color:#e5e7eb;padding:6px;border-top:2px solid #111;border-bottom:1px solid #bbb;text-align:center;font-weight:bold;\">Compliance Information</td>\n    </tr>\n    <tr>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Supporting Documents Provided:</strong> {{supporting_documents}}</td>\n      <td style=\"padding:6px;border-bottom:1px solid #eee;\" colspan=\"2\"><strong>Payment Methods:</strong> {{payment_methods}}</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"padding:8px;font-size:0.85rem;border-top:1px solid #bbb;background-color:#f9fafb;\"><strong>Court Filing Notice:</strong> Any court appearance related to this citation must be initiated through the Los Santos Greg E. Joplin Courthouse. Cases must be filed in advance via the official e-form before a hearing will be scheduled.</td>\n    </tr>\n    <tr>\n      <td colspan=\"4\" style=\"padding:8px;font-size:0.85rem;border-top:1px solid #bbb;white-space:pre-wrap;\">{{compliance_instructions}}</td>\n    </tr>\n  </tbody>\n</table>",
    "form": [
        {
            "type": "section",
            "title": "Citation Details"
        },
        {
            "type": "general",
            "name": "general"
        },
        {
            "type": "text",
            "name": "citation_number",
            "label": "Citation Number",
            "placeholder": "e.g. IC-240881",
            "required": true
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "case_number",
                    "label": "Agency Case Number",
                    "placeholder": "Case #"
                },
                {
                    "type": "text",
                    "name": "citation_service_method",
                    "label": "Service Method",
                    "placeholder": "e.g. In Person"
                }
            ]
        },
        {
            "type": "section",
            "title": "Officer Information"
        },
        {
            "type": "officer",
            "name": "officers",
            "showBadgeNumber": true,
            "showDivDetail": true,
            "multi": false
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "officer_watch",
                    "label": "Watch / Shift",
                    "placeholder": "e.g. PM Watch"
                },
                {
                    "type": "text",
                    "name": "officer_contact",
                    "label": "Officer Contact",
                    "placeholder": "e.g. (555) 010-3122"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "officer_signature",
                    "label": "Officer Signature",
                    "placeholder": "Full name or digital signature"
                },
                {
                    "type": "text",
                    "name": "supervisor_name",
                    "label": "Approving Supervisor",
                    "placeholder": "Name, Rank, #Badge"
                }
            ]
        },
        {
            "type": "text",
            "name": "incident_type",
            "label": "Incident Type",
            "placeholder": "e.g. Public Nuisance"
        },
        {
            "type": "section",
            "title": "Defendant Information"
        },
        {
            "type": "text",
            "name": "defendant_name",
            "label": "Defendant's Full Name",
            "placeholder": "Firstname Lastname",
            "required": true
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_address",
                    "label": "Address",
                    "placeholder": "Street address"
                },
                {
                    "type": "text",
                    "name": "defendant_city_state_zip",
                    "label": "City / State / ZIP",
                    "placeholder": "Los Santos, SA 90012"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_dob",
                    "label": "Date of Birth",
                    "placeholder": "DD/MM/YYYY"
                },
                {
                    "type": "text",
                    "name": "defendant_age",
                    "label": "Age",
                    "placeholder": "Age"
                },
                {
                    "type": "text",
                    "name": "defendant_gender",
                    "label": "Gender",
                    "placeholder": "Gender"
                },
                {
                    "type": "text",
                    "name": "defendant_race",
                    "label": "Race",
                    "placeholder": "Race"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_phone",
                    "label": "Phone Number",
                    "placeholder": "e.g. (555) 010-7712"
                },
                {
                    "type": "text",
                    "name": "defendant_email",
                    "label": "Email",
                    "placeholder": "name@example.com"
                },
                {
                    "type": "text",
                    "name": "contact_preference",
                    "label": "Preferred Contact Method",
                    "placeholder": "Phone / Email"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_id_type",
                    "label": "Identification Type",
                    "placeholder": "Driver License, State ID"
                },
                {
                    "type": "text",
                    "name": "defendant_id_number",
                    "label": "Identification Number",
                    "placeholder": "ID #"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_employer",
                    "label": "Employer",
                    "placeholder": "Employer"
                },
                {
                    "type": "text",
                    "name": "defendant_occupation",
                    "label": "Occupation",
                    "placeholder": "Occupation"
                },
                {
                    "type": "text",
                    "name": "defendant_signature",
                    "label": "Defendant Signature",
                    "placeholder": "If obtained"
                }
            ]
        },
        {
            "type": "better-switch",
            "name": "custody_release",
            "label": "Released on Promise to Appear",
            "dataOn": "Released",
            "dataOff": "Not Released"
        },
        {
            "type": "text",
            "name": "release_conditions",
            "label": "Release Conditions",
            "placeholder": "Conditions of release",
            "stipulation": {
                "field": "custody_release",
                "value": true
            }
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "victim_name",
                    "label": "Victim / Complainant",
                    "placeholder": "Name"
                },
                {
                    "type": "text",
                    "name": "victim_contact",
                    "label": "Victim Contact",
                    "placeholder": "Phone / Email"
                }
            ]
        },
        {
            "type": "section",
            "title": "Location & Violation"
        },
        {
            "type": "location",
            "name": "location",
            "showDistrict": true
        },
        {
            "type": "better-switch",
            "name": "property_seized",
            "label": "Property Seized",
            "dataOn": "Yes",
            "dataOff": "No"
        },
        {
            "type": "text",
            "name": "property_receipt_number",
            "label": "Property Receipt Number",
            "placeholder": "Receipt #",
            "stipulation": {
                "field": "property_seized",
                "value": true
            }
        },
        {
            "type": "section",
            "title": "Citations"
        },
        {
            "type": "charge",
            "name": "charges",
            "showClass": false,
            "showOffense": true,
            "allowedTypes": {
                "I": true
            },
            "allowedIds": "133,423,433,434,441,611,612",
            "customFields": [
                {
                    "type": "text",
                    "name": "fine",
                    "label": "Fine",
                    "placeholder": "Fine Amount"
                }
            ]
        },
        {
            "type": "hidden",
            "name": "charges_total_fine",
            "value": "{{#with (sum (pluck charges 'fine'))}}{{this}}{{/with}}"
        },
        {
            "type": "section",
            "title": "Narrative & Notes"
        },
        {
            "type": "textarea",
            "name": "narrative",
            "label": "Narrative of Events",
            "placeholder": "Provide a detailed account of the events leading to the citation...",
            "required": true
        },
        {
            "type": "textarea",
            "name": "officer_observations",
            "label": "Officer Observations",
            "placeholder": "Describe demeanor, compliance, or other notable observations."
        },
        {
            "type": "textarea",
            "name": "witness_statements",
            "label": "Witness Statements",
            "placeholder": "Summaries of any witness statements or recordings."
        },
        {
            "type": "textarea",
            "name": "evidence_collected",
            "label": "Evidence Collected",
            "placeholder": "List photographs, video clips, or documents attached."
        },
        {
            "type": "textarea",
            "name": "victim_impact",
            "label": "Victim Impact / Additional Notes",
            "placeholder": "Document any impact statements or remedial actions."
        },
        {
            "type": "section",
            "title": "Compliance"
        },
        {
            "type": "text",
            "name": "supporting_documents",
            "label": "Supporting Documents Provided",
            "placeholder": "e.g. Photos, Statements"
        },
        {
            "type": "text",
            "name": "payment_methods",
            "label": "Accepted Payment Methods",
            "placeholder": "Online, Mail, In-person"
        },
        {
            "type": "textarea",
            "name": "compliance_instructions",
            "label": "Compliance Instructions",
            "placeholder": "Outline how to pay or contest the citation."
        }
    ],
    "countyCityStipulation": true
}