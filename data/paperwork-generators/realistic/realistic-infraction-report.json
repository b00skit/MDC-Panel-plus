{
    "id": "realistic-infraction-report",
    "title": "Infraction Citation",
    "description": "A realistic, non-traffic related infraction citation.",
    "icon": "FileWarning",
    "icon_color": "#f59e0b",
    "is_html_output": true,
    "custom_button_text": "Open MDC Record",
    "custom_button_link": "https://mdc.gta.world/record/{{defendant_name}}",
    "custom_button_replace_spaces": true,
    "output": "<div style=\"font-family:'Courier New',monospace;background-color:#fdf7e2;border:4px double #1c1c1c;padding:18px;color:#1a1a1a;line-height:1.35;\">\n  <div style=\"display:flex;justify-content:space-between;align-items:flex-start;margin-bottom:12px;padding-bottom:8px;border-bottom:3px double #1c1c1c;\">\n    <div>\n      <div style=\"font-size:1.25rem;font-weight:700;letter-spacing:0.12em;text-transform:uppercase;\">County of Los Santos</div>\n      <div style=\"font-size:0.85rem;letter-spacing:0.08em;text-transform:uppercase;\">Department of Public Safety</div>\n    </div>\n    <div style=\"text-align:right;font-size:0.75rem;letter-spacing:0.08em;text-transform:uppercase;\">\n      <div style=\"font-weight:700;\">Form DD-214 IR</div>\n      <div>Revision {{general.date}}</div>\n      <div style=\"font-style:italic;\">Infraction Citation</div>\n    </div>\n  </div>\n  <table style=\"width:100%;border-collapse:collapse;\">\n    <tbody>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">1. Citation No.</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{citation_number}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">2. Case No.</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{case_number}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">3. Date</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{general.date}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">4. Time</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{general.time}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">5. Service Method</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{citation_service_method}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">6. Payment Due</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">On / Before {{addDays general.date 28}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;padding:6px 4px;border:none;\"><div style=\"border:2px solid #1c1c1c;border-left:none;border-right:none;padding:4px 0;margin:4px 0;background-color:#efe2bc;text-align:center;font-weight:700;letter-spacing:0.12em;text-transform:uppercase;\">Officer & Agency</div></td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">7. Officer</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{officers.0.name}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">8. Badge</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{officers.0.badgeNumber}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">9. Division / Watch</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{officers.0.divDetail}} &bull; {{officer_watch}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">10. Officer Contact</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{officer_contact}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">11. Agency / Incident Type</td>\n        <td colspan=\"3\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{officers.0.department}} &bull; {{incident_type}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;padding:6px 4px;border:none;\"><div style=\"border:2px solid #1c1c1c;border-left:none;border-right:none;padding:4px 0;margin:4px 0;background-color:#efe2bc;text-align:center;font-weight:700;letter-spacing:0.12em;text-transform:uppercase;\">Defendant Identification</div></td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">12. Name</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_name}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">13. Address</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_address}}, {{defendant_city_state_zip}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">14. DOB / Age</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_dob}} ({{defendant_age}})</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">15. Sex / Race</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_gender}} / {{defendant_race}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">16. Contact</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">Phone {{defendant_phone}} &bull; Email {{defendant_email}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">17. Preferred Contact</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{contact_preference}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">18. Identification</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_id_type}} {{defendant_id_number}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">19. Employment</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_employer}} &bull; {{defendant_occupation}}</td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">20. Signature</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{defendant_signature}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">21. Victim / Contact</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{victim_name}} {{victim_contact}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;padding:6px 4px;border:none;\"><div style=\"border:2px solid #1c1c1c;border-left:none;border-right:none;padding:4px 0;margin:4px 0;background-color:#efe2bc;text-align:center;font-weight:700;letter-spacing:0.12em;text-transform:uppercase;\">Violation Detail & Location</div></td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">22. Location</td>\n        <td colspan=\"2\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{location.street}}, {{location.district}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">23. Property Seized</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{#if property_seized}}Yes{{else}}No{{/if}} &bull; Ref {{property_receipt_number}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;padding:0;\"><table style=\"width:100%;border-collapse:collapse;\">\n  <tbody>\n    <tr style=\"background-color:#e9ddba;text-transform:uppercase;letter-spacing:0.08em;font-size:0.78rem;font-weight:600;\">\n      <td style=\"border:1px solid #1c1c1c;padding:6px;width:70%;\">24. Charge Description</td>\n      <td style=\"border:1px solid #1c1c1c;padding:6px;text-align:right;width:15%;\">Assessment</td>\n      <td style=\"border:1px solid #1c1c1c;padding:6px;text-align:right;width:15%;\">Fine (USD)</td>\n    </tr>\n    {{#any charges}}\n      {{#each charges}}\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.9rem;\">{{#with (lookup @root.penalCode chargeId)}}({{type}})({{../class}}) {{id}}. {{charge}} IC {{id}}. {{charge}}{{/with}}</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;text-align:right;font-size:0.9rem;\">Citation</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;text-align:right;font-size:0.9rem;\">${{fine}}</td>\n      </tr>\n      {{/each}}\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;text-align:right;font-weight:700;text-transform:uppercase;letter-spacing:0.08em;\" colspan=\"2\">Total Amount Due</td>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;text-align:right;font-weight:700;font-size:0.95rem;\">${{charges_total_fine}}</td>\n      </tr>\n    {{else}}\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.9rem;\" colspan=\"3\">No violations recorded.</td>\n      </tr>\n    {{/any}}\n  </tbody>\n</table></td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;white-space:pre-wrap;\"><strong style=\"text-transform:uppercase;letter-spacing:0.08em;\">Narrative Statement</strong><br/>{{narrative}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"2\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;white-space:pre-wrap;\"><strong style=\"text-transform:uppercase;letter-spacing:0.08em;\">Officer Observations</strong><br/>{{officer_observations}}</td>\n        <td colspan=\"2\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;white-space:pre-wrap;\"><strong style=\"text-transform:uppercase;letter-spacing:0.08em;\">Witness Statements</strong><br/>{{witness_statements}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"2\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;white-space:pre-wrap;\"><strong style=\"text-transform:uppercase;letter-spacing:0.08em;\">Evidence Collected</strong><br/>{{evidence_collected}}</td>\n        <td colspan=\"2\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;white-space:pre-wrap;\"><strong style=\"text-transform:uppercase;letter-spacing:0.08em;\">Victim Impact / Notes</strong><br/>{{victim_impact}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;padding:6px 4px;border:none;\"><div style=\"border:2px solid #1c1c1c;border-left:none;border-right:none;padding:4px 0;margin:4px 0;background-color:#efe2bc;text-align:center;font-weight:700;letter-spacing:0.12em;text-transform:uppercase;\">Compliance Guidance</div></td>\n      </tr>\n      <tr>\n        <td style=\"border:1px solid #1c1c1c;padding:6px;background-color:#f0e6c8;font-size:0.75rem;font-weight:600;letter-spacing:0.08em;text-transform:uppercase;\">25. Payment Methods</td>\n        <td colspan=\"3\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;\">{{payment_methods}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.85rem;white-space:pre-wrap;background-color:#f5ebd0;\">{{compliance_instructions}}</td>\n      </tr>\n      <tr>\n        <td colspan=\"4\" style=\"border:1px solid #1c1c1c;padding:6px;font-size:0.95rem;font-size:0.8rem;background-color:#f8f1d9;font-style:italic;\">Any court appearance related to this citation must be initiated through the Los Santos Greg E. Joplin Courthouse via official filing prior to scheduling.</td>\n      </tr>\n    </tbody>\n  </table>\n</div>",
    "form": [
        {
            "type": "section",
            "title": "Citation Details"
        },
        {
            "type": "general",
            "name": "general"
        },
        {
            "type": "hidden",
            "name": "citation_number",
            "generateValue": {
                "type": "pattern",
                "pattern": "IC-{{date:MMM}}-{{digits:5}}",
                "uppercase": true
            }
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "dropdown",
                    "name": "citation_service_method",
                    "label": "Service Method",
                    "options": [
                        "In Person",
                        "Mailed Copy (Issued via MDC)"
                    ]
                }
            ]
        },
        {
            "type": "section",
            "title": "Officer Information"
        },
        {
            "type": "officer",
            "name": "officers",
            "showBadgeNumber": true,
            "showDivDetail": true,
            "multi": false
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "officer_watch",
                    "label": "Watch / Shift",
                    "placeholder": "e.g. PM Watch"
                },
                {
                    "type": "text",
                    "name": "officer_contact",
                    "label": "Officer Contact",
                    "placeholder": "e.g. (555) 010-3122"
                }
            ]
        },
        {
            "type": "text",
            "name": "incident_type",
            "label": "Incident Type",
            "placeholder": "e.g. Public Nuisance"
        },
        {
            "type": "section",
            "title": "Defendant Information"
        },
        {
            "type": "text",
            "name": "defendant_name",
            "label": "Defendant's Full Name",
            "placeholder": "Firstname Lastname",
            "required": true
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_address",
                    "label": "Address",
                    "placeholder": "Street address"
                },
                {
                    "type": "text",
                    "name": "defendant_city_state_zip",
                    "label": "City / State / ZIP",
                    "placeholder": "Los Santos, SA 90012"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_dob",
                    "label": "Date of Birth",
                    "placeholder": "DD/MM/YYYY"
                },
                {
                    "type": "text",
                    "name": "defendant_age",
                    "label": "Age",
                    "placeholder": "Age"
                },
                {
                    "type": "text",
                    "name": "defendant_gender",
                    "label": "Gender",
                    "placeholder": "Gender"
                },
                {
                    "type": "text",
                    "name": "defendant_race",
                    "label": "Race",
                    "placeholder": "Race"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_phone",
                    "label": "Phone Number",
                    "placeholder": "e.g. (555) 010-7712"
                },
                {
                    "type": "text",
                    "name": "defendant_email",
                    "label": "Email",
                    "placeholder": "name@example.com"
                },
                {
                    "type": "text",
                    "name": "contact_preference",
                    "label": "Preferred Contact Method",
                    "placeholder": "Phone / Email"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_id_type",
                    "label": "Identification Type",
                    "placeholder": "Driver License, State ID"
                },
                {
                    "type": "text",
                    "name": "defendant_id_number",
                    "label": "Identification Number",
                    "placeholder": "ID #"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "defendant_employer",
                    "label": "Employer",
                    "placeholder": "Employer"
                },
                {
                    "type": "text",
                    "name": "defendant_occupation",
                    "label": "Occupation",
                    "placeholder": "Occupation"
                },
                {
                    "type": "text",
                    "name": "defendant_signature",
                    "label": "Defendant Signature",
                    "placeholder": "If obtained"
                }
            ]
        },
        {
            "type": "group",
            "fields": [
                {
                    "type": "text",
                    "name": "victim_name",
                    "label": "Victim / Complainant",
                    "placeholder": "Name"
                },
                {
                    "type": "text",
                    "name": "victim_contact",
                    "label": "Victim Contact",
                    "placeholder": "Phone / Email"
                }
            ]
        },
        {
            "type": "section",
            "title": "Location & Violation"
        },
        {
            "type": "location",
            "name": "location",
            "showDistrict": true
        },
        {
            "type": "better-switch",
            "name": "property_seized",
            "label": "Property Seized",
            "dataOn": "Yes",
            "dataOff": "No"
        },
        {
            "type": "section",
            "title": "Citations"
        },
        {
            "type": "charge",
            "name": "charges",
            "showClass": false,
            "showOffense": true,
            "allowedTypes": {
                "I": true
            },
            "allowedIds": "133,423,433,434,441,611,612",
            "customFields": [
                {
                    "type": "text",
                    "name": "fine",
                    "label": "Fine",
                    "placeholder": "Fine Amount"
                }
            ]
        },
        {
            "type": "hidden",
            "name": "charges_total_fine",
            "value": "{{#with (sum (pluck charges 'fine'))}}{{this}}{{/with}}"
        },
        {
            "type": "section",
            "title": "Narrative & Notes"
        },
        {
            "type": "textarea",
            "name": "narrative",
            "label": "Narrative of Events",
            "placeholder": "Provide a detailed account of the events leading to the citation...",
            "required": true
        },
        {
            "type": "textarea",
            "name": "officer_observations",
            "label": "Officer Observations",
            "placeholder": "Describe demeanor, compliance, or other notable observations."
        },
        {
            "type": "textarea",
            "name": "witness_statements",
            "label": "Witness Statements",
            "placeholder": "Summaries of any witness statements or recordings."
        },
        {
            "type": "textarea",
            "name": "evidence_collected",
            "label": "Evidence Collected",
            "placeholder": "List photographs, video clips, or documents attached."
        },
        {
            "type": "textarea",
            "name": "victim_impact",
            "label": "Victim Impact / Additional Notes",
            "placeholder": "Document any impact statements or remedial actions."
        },
        {
            "type": "section",
            "title": "Compliance"
        },
        {
            "type": "textarea",
            "name": "compliance_instructions",
            "label": "Compliance Instructions",
            "placeholder": "Outline how to pay or contest the citation."
        },
        {
            "type": "hidden",
            "name": "property_receipt_number",
            "generateValue": {
                "type": "pattern",
                "pattern": "PR-{{digits:5}}"
            }
        }
    ],
    "countyCityStipulation": true
}
